<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="at.ac.tuwien.ims.svn.phantasmophobia.MenuActivity">

    <LinearLayout
        android:id="@+id/mLlayoutBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/tower_start_ghost_compressed"
        android:gravity="bottom|right">

        <ImageButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/start"
            android:onClick="startGame"
            android:baselineAlignBottom="true"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/level"
            android:layout_gravity="center_vertical|right"
            android:baselineAlignBottom="true"
            android:onClick="setLevel"
            android:clickable="true" />



        <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/help"
            android:onClick="showHelp"
            android:baselineAlignBottom="true"
            android:clickable="true"
            android:layout_gravity="center_vertical|right"/>

        <ImageButton
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/video"
            android:onClick="showVideo"
            android:baselineAlignBottom="true"
            android:clickable="true"
            android:layout_gravity="center_vertical|right"/>

        <ImageButton
            android:id="@+id/highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/highscore"
            android:onClick="showHighscore"
            android:baselineAlignBottom="true"
            android:clickable="true"
            android:layout_gravity="center_vertical|right" />




    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
